<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/xins_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/ic_lher" />

        <TextView
            android:id="@+id/xins_title2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="6dp"
            android:gravity="center_vertical"
            android:text="新生指南"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xinshengzhinan"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xins_tx1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center"
            android:text="整理新装"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="抵达目的地"
            android:gravity="center"
            android:textSize="20sp" />

       <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="入校第一站"
            android:gravity="center"
            android:textSize="20sp" />

       <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我是一个兵"
            android:gravity="center"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="生活万花筒"
            android:gravity="center"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="结交新朋友"
            android:gravity="center"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="勤练有补助"
            android:gravity="center"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:background="#260800" />

        <TextView
            android:id="@+id/xins_tx8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="学姐学长寄语"
            android:gravity="center"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>